<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_prod_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.ProductDetailsFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_height"
            android:background="@color/colorAccentDarkShade"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:contentInsetLeft="@dimen/view_margin"
            app:contentInsetStart="@dimen/view_margin">

            <TextView
                android:id="@+id/app_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:text="UMPBizGo"
                android:textAppearance="?android:attr/textAppearanceLarge" />


        </androidx.appcompat.widget.Toolbar>

        <View
            android:id="@+id/toolbar_shadow"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@+id/detail_toolbar"
            android:background="@drawable/toolbar_shadow" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar_shadow"
            android:fillViewport="true">

            <RelativeLayout
                android:id="@+id/container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/detailImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentStart="true"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:padding="12dp" />



                <RelativeLayout
                    android:id="@+id/container2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detailImageView"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_name_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="sans-serif"
                        android:inputType="textMultiLine"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="false"
                        android:text="Product Name"
                        android:textColor="#000000"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/brand_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/product_name_details"
                        android:layout_alignStart="@+id/product_name_details"
                        android:layout_marginTop="5dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:text="Brand Name"
                        android:textColor="@color/colorAccent"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/productpriceview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/product_image"
                        android:layout_toLeftOf="@+id/product_price_details"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:focusable="true"
                        android:fontFamily="sans-serif-light"
                        android:text="RM : "
                        android:textColor="@color/colorAccentDarkShade"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/product_price_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/product_name"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="15dp"
                        android:fontFamily="sans-serif"
                        android:paddingTop="5dp"
                        android:singleLine="true"
                        android:text="Product Price"
                        android:textColor="#04B4AE"
                        android:textSize="24dp" />


                    <TextView
                        android:id="@+id/productdetailsdescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/brand_name"
                        android:layout_alignStart="@+id/brand_name"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="15dp"
                        android:focusable="true"
                        android:fontFamily="sans-serif-light"
                        android:inputType="textMultiLine"
                        android:lineSpacingMultiplier="1.3"
                        android:maxLines="50"
                        android:minLines="1"
                        android:singleLine="false"
                        android:text="Description Detailed"
                        android:textColor="@color/colorAccentDarkShade"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/productquantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/productdetailsdescription"
                        android:layout_alignStart="@+id/brand_name"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:focusable="true"
                        android:fontFamily="sans-serif-light"
                        android:inputType="textMultiLine"
                        android:lineSpacingMultiplier="1.3"
                        android:maxLines="50"
                        android:minLines="1"
                        android:singleLine="false"
                        android:text="Product Quantity : "
                        android:textColor="@color/colorAccentDarkShade"
                        android:textSize="18dp" />

                    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                        android:id="@+id/number_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        app:backGroundColor="@color/colorAccentLight"
                        android:layout_below="@id/productdetailsdescription"
                        android:layout_toRightOf="@+id/productquantity"
                        android:layout_marginTop="6dp"
                        android:elevation="6dp"
                        app:finalNumber="10"
                        app:initialNumber="1">

                    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

                    <Button
                        android:id="@+id/pd_add_to_cart_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/number_btn"
                        android:background="@drawable/basicbutton"
                        android:layout_margin="15dp"
                        android:text="Add To Cart"
                        android:textColor="@android:color/white"
                        android:textSize="16sp">
                    </Button>

                </RelativeLayout>




            </RelativeLayout>



        </ScrollView>
    </RelativeLayout>


</FrameLayout>