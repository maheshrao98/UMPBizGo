<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/frame_edit_auth_product"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        >

        <RelativeLayout
            android:id="@+id/relativeLayouteditauth"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <ImageButton
                android:id="@+id/backfromeditauthorizedproductpage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:tint="@android:color/white"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/back_button_icon" />
        </RelativeLayout>


        <TextView
            android:id="@+id/editproductnamedisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="Product Name"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/relativeLayouteditauth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/change_authorized_product_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/relativeLayouteditauth"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/container3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayouteditauth"
            app:layout_constraintVertical_bias="0.527"
            android:src="@drawable/ic_select" />



        <RelativeLayout
            android:id="@+id/container3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="292dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edit_authorized_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="16dp"
            android:elevation="10dp"
            android:scrollbars="vertical"
            android:background="@drawable/skip_button"
            android:textAlignment="textStart"
            android:text="Product Name"
            android:textColor="#191919"
            android:inputType="textMultiLine"
            android:padding="16dp" />

        <EditText
            android:id="@+id/edit_authorized_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_authorized_product_name"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:elevation="10dp"
            android:scrollbars="vertical"
            android:background="@drawable/skip_button"
            android:text="Product Description"
            android:textColor="#191919"
            android:textAlignment="viewStart"
            android:inputType="textMultiLine"
            android:padding="16dp" />

        <EditText
            android:id="@+id/edit_authorized_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_authorized_product_description"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:elevation="10dp"
            android:background="@drawable/skip_button"
            android:text="Product Price"
            android:textColor="#191919"
            android:inputType="number"
            android:padding="16dp" />

            <TextView
                android:id="@+id/edit_authorized_product_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_authorized_product_price"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:elevation="10dp"
                android:background="@drawable/skip_button"
                android:textSize="18sp"
                android:textColor="#191919"
                android:text="Product Category"
                android:padding="16dp" />


        <Button
            android:id="@+id/edit_authorized_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_authorized_product_price"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="120dp"
            android:background="@color/colorPrimaryDark"
            android:elevation="10dp"
            android:padding="14dp"
            android:text="Edit Product"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</FrameLayout>