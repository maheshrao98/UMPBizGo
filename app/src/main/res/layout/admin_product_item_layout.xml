<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/aproduct_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:padding="25dp"
            android:scaleType="fitCenter" />

        <RelativeLayout
            android:id="@+id/item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/aproduct_image"
            android:background="@android:color/white"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/aproduct_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="Product Name"
                android:textColor="#000000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/aseller_business_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/aproduct_name"
                android:fontFamily="sans-serif-light"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="Brand Name"
                android:textColor="#A4A4A4"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/aproduct_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/aseller_business_name"
                android:fontFamily="sans-serif"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:text="$75.00"
                android:textColor="#04B4AE"
                android:textSize="12dp" />


        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>