<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/seller_order_product_image"
            android:layout_below="@+id/seller_order_id"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/groceries"
            android:layout_marginStart="5dp"
            android:layout_marginTop="7dp"
            android:padding="25dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/seller_order_id"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:text="Order ID"
            android:textAlignment="textEnd"
            android:textColor="@color/colorSecondaryLight"
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/seller_order_product_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/seller_order_id"
            android:gravity="left"
            android:layout_marginTop="8dp"
            >
        </TextView>
        <TextView
            android:id="@+id/seller_order_product_quantity"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Product Quantity"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/seller_order_product_name"
            android:gravity="right"
            android:layout_marginTop="10dp"
            >
        </TextView>
        <TextView
            android:id="@+id/seller_customer_name"
            android:layout_width="220dp"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/seller_order_product_quantity"
            android:gravity="right"
            android:layout_marginTop="10dp"
            >
        </TextView>

        <TextView
            android:id="@+id/seller_customer_address"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Customer Address"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/seller_customer_name"
            android:gravity="right"
            android:layout_marginTop="10dp"
            >
        </TextView>

        <TextView
            android:id="@+id/seller_order_datetime"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Customer Date/Time"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            android:textStyle="bold"
            android:layout_below="@+id/seller_customer_address"
            android:gravity="right"
            android:layout_marginTop="10dp"
            >
        </TextView>
    </RelativeLayout>
</RelativeLayout>